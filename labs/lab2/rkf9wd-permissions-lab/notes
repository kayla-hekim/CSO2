#4.
# for self:
chmod 700 dir
chmod 600 dir/foo dir/baz
# ---
# for partner:
setfacl -m u:nka8qg:--x ./dir
setfacl -m m:--x dir

setfacl -m u:nka8qg:r-- ./dir/foo
setfacl -m m:r-- dir/foo

setfacl -m u:nka8qg:--- ./dir/baz
# ---
setfacl -m g::--- dir
setfacl -m g::--- dir/foo
setfacl -m g::--- dir/baz



#5.
